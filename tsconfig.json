{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ES2022",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "~assets/*": [
        "src/assets/*"
      ],
      "~components/*": [
        "src/components/*"
      ],
      "~mock/*": [
        "src/mock/*"
      ],
      "~router/*": [
        "src/router/*"
      ],
      "~stores/*": [
        "src/stores/*"
      ],
      "~/*": [
        "src/*"
      ],
      "~pages/*": [
        "src/pages/*"
      ],
      "~types/*": [
        "src/types/*"
      ],
      "~test/*": [
        "src/test/*"
      ],
      "~plugin/*": [
        "src/plugin/*"
      ],
      "~directives/*": [
        "src/directives/*"
      ],
      "~utils/*": [
        "src/utils/*"
      ],
      "~layouts/*": [
        "src/layouts/*"
      ],
      "~api/*": [
        "src/api/*"
      ],
      "~auth/*": [
        "src/pages/auth/*"
      ]
    }
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.ts",
    "types/**/*.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}